{
  "name": "chat-completions-app",
  "version": "1.0.0",
  "description": "a simple application how to use the chat completions with OpenAI in TypeScript",
  "main": "main.js",
  "scripts": {
    "build": "rimraf build && tsc",
    "preserve": "npm run build",
    "start": "nodemon"
  },
  "keywords": [
    "typescript",
    "azure",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "openai": "^6.7.0",
    "rimraf": "^6.0.1"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "npx ts-node ./src/main.ts"
  }
}
